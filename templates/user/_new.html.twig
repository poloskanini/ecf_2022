{% extends 'base.html.twig' %}

{% block title %} {{parent() }} | Ajouter un nouvel utilisateur{% endblock %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}
{% block searchBar %}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col col-xl-8">

            <h1 class="my-4">Ajouter un nouvel utilisateur</h1>

            {{ form_start(form) }}

                <div class="form-error is-invalid">
                    {{ form_errors(form) }}
                </div>

                <div class="form-group">
                {{ form_row(form.roles)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.name)}}
                    {{ form_widget(form.name)}}
                    {{ form_errors(form.name)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.email)}}
                    {{ form_widget(form.email)}}
                    {{ form_errors(form.email)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.password)}}
                    {{ form_widget(form.password)}}
                    {{ form_errors(form.password)}}
                </div>

                <div class="form-group">
                <p class="m-0">Actif</p>
                    {{ form_label(form.isActive)}}
                    {{ form_widget(form.isActive)}}
                    {{ form_errors(form.isActive)}}
                </div>
                

                <a href="{{ path('app_user_index') }}" class="btn btn-secondary my-4 me-3" value="Retour">Annuler</a>
                <button type="submit" class="btn btn-primary my-4" value="Enregistrer" onclick="return confirm('Êtes-vous sûr de vouloir créer ce nouvel utilisateur ?')">Confirmer</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}