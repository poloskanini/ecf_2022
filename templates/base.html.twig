<!DOCTYPE HTML>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <title>{% block title %}STUDI FITNESS{% endblock %}</title>
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="{{ asset('build/images/faviconstudi.png') }}" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />  <!-- Google Fonts Roboto -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
  <!--DM Serif Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
  <!--Ms Madi Font -->
  <link href="https://fonts.googleapis.com/css2?family=Ms+Madi&display=swap" rel="stylesheet">
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <!-- Boostrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  
  {# WebPack Encore Scripts (include My own CSS Styles on App.CSS + JS Scripts on App.js (assets/styles)) #}
  {% block stylesheets %}
    {{ encore_entry_link_tags('app')}}
  {% endblock %}

  {% block javascripts %}
    {{ encore_entry_script_tags('app')}}
  {% endblock %}
</head>

  <body>
  
  <div class="wrapper">

    {% if block('header') is defined %}
     
    {#*** MY SIDE BAR ***#}
    <header class="header">
      <nav class="navigation">
        <ul class="list">
          <li class="brand-logo">
            <a href="">
                <img class="logo-nav" src="{{ asset('build/images/logo.png') }}" alt="profile-picture">
              <span class="title">
              <strong>STUDI FITNESS GROUP</strong>
              </span>
            </a>
          </li>
          <li>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('home') }}">
              <span class="icon">
                <i class="fas fa-tachometer-alt"></i>
              </span>
              <span class="title">Dashboard</span>
            </a>
            {% else %}
            <a href="{{ path('home') }}">
              <span class="icon">
                <i class="fa-solid fa-house"></i>
              </span>
              <span class="title">Mon profil</span>
            </a>
          </li>
          {% endif %}
          {% if is_granted('ROLE_ADMIN') %}
          <li>
            <a href="{{ path('app_user_index') }}">
              <span class="icon">
                <i class="fa fa-users"></i>
              </span>
              <span class="title">Utilisateurs</span>
            </a>
          </li>
          <li>
            <a href="{{ path('app_partner_index') }}">
              <span class="icon">
                <i class="fa fa-handshake"></i>
              </span>
              <span class="title">Partenaires</span>
            </a>
          </li>
          <li>
            <a href="{{ path('app_structure_index') }}">
              <span class="icon">
                <i class="fa fa-building"></i>
              </span>
              <span class="title">Structures</span>
            </a>
          </li>
          {% endif %}
          <li>
            <a href="{{ path('app_logout') }}">
              <span class="icon">
                <i class="fa-solid fa-power-off"></i>
              </span>
              <span class="title">Déconnexion</span>
            </a>
          </li>
        </ul>
      </nav>
    </header>

    {% endif %}

    <main>

    {# Top Bar #}
    {% if block('topbar') is defined %}
    
      <div class="topbar">

        <div class="toggle"></div>

        {# Login-Logout #}
        <div class="login-logout">
          <div class="profile">
            <img src="{{ asset('build/images/Jim-Morrison.jpeg') }}" alt="profile-picture">
          </div>
          <div class="menu">
            <ul>
              <li>
              {% if app.user %}
              <i class="fa-solid fa-circle-user"></i>
              {{ app.user.email }}
              {% endif %}
              </li>
              <li class="disconnect">
                <i class="fa-solid fa-power-off"></i>
                <a href="{{ path('app_logout') }}">Déconnexion</a>
              </li>
            </ul>
          </div>
        </div>

      </div>
      {% endif %}

      <div>
        {% block content %}{% endblock %}
      </div>
      
    </main>

  </div>
  </body>
  
  {# MY JAVASCRIPT #}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
