{% extends 'partner/index.html.twig' %}

{% block modal %}

<!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content text-center">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="icon-box">
                    <i class="fa-solid fa-circle-xmark fa-delete"></i>
                </div>
                <h3 class="my-4">Êtes-vous sûr ?</h3>
            </div>
            <p class="m-0">Cette action entrainera la suppression définitive de l'utilisateur</p>
            <p>Souhaitez-vous continuer ?</p>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" name"submit" value="submit" class="btn delete-confirm" href="{{ path('app_partner_delete', {'id': partner.id}) }}">Supprimer</button>
            </div>
            </div>
        </div>
    </div>


{% endblock %}