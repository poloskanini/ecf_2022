{% extends 'base.html.twig' %}

{% block title %} {{parent() }} | Ajouter une nouvelle structure {% endblock %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}
{% block searchBar %}{% endblock %}
{% block content %}

<div class="container-fluid">
    <div class="row">
        <div class="col col-xl-6">
        
        {% if notification %}
            <div class="alert alert-info">{{ notification }}</div>
        {% endif %}

            <h1 class="my-4">AJOUTER UNE NOUVELLE STRUCTURE</h1>

            {{ form_start(form) }}

                <div class="form-error is-invalid">
                    {{ form_errors(form) }}
                </div>

                <h4>INFORMATIONS DE L'UTILISATEUR</h4>

                <div class="form-group d-none">
                {{ form_row(form.roles)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.name)}}
                    {{ form_widget(form.name)}}
                    {{ form_errors(form.name)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.email)}}
                    {{ form_widget(form.email)}}
                    {{ form_errors(form.email)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.password)}}
                    {{ form_widget(form.password)}}
                    {{ form_errors(form.password)}}
                </div>

                <div class="form-group">
                <p class="m-0">Actif</p>
                    {{ form_label(form.isActive)}}
                    {{ form_widget(form.isActive)}}
                    {{ form_errors(form.isActive)}}
                </div>

                <hr>
                <h4>INFORMATIONS DE LA STRUCTURE</h4>

                <div class="form-group">
                    {{ form_label(form.id)}}
                    {{ form_widget(form.id)}}
                    {{ form_errors(form.id)}}
                </div>

                <div class="form-group">
                    {{ form_label(form.postalAdress)}}
                    {{ form_widget(form.postalAdress)}}
                    {{ form_errors(form.postalAdress)}}
                </div>
                
                <a href="{{ path('app_structure_index') }}" class="btn btn-secondary my-4 me-3" value="Retour">Annuler</a>
                <button type="button" class="btn btn-primary my-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Ajouter la structure
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content text-center">
                            <div class="modal-header">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="icon-box box-confirm-structure">
                                    <i class="fa-solid fa-check"></i>
                                </div>
                                <h3 class="my-4">Êtes-vous sûr ?</h3>
                            </div>
                            <p class="m-0">Cette action entrainera la création d'une nouvelle structure.</p>
                            <p>Souhaitez-vous continuer ?</p>
                            <div class="modal-footer justify-content-center">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <button type="submit" name"submit" value="submit" class="btn form-check-structure my-4">Ajouter</button>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}